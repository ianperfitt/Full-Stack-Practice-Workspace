class Solution {
    public double findMaxAverage(int[] nums, int k) {
        int left = 0;
        int right = k - 1;
        int n = nums.length;
        double solution = 0;
        while (right < n) {
            double average = 0;
            for(int i = left; i < right; i++) {
                average = average + nums[i];
            }
            solution = Math.max(solution, average / k);
            ++left;
            ++right;
        }
        return solution;
    }
}